{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["ES2018"],
		"outDir": "./dist",
		"rootDir": "./",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": ["node", "jest"]
	},
	"include": [
		"src/**/*",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"docs",
		"coverage",
		"test"
	]
}
